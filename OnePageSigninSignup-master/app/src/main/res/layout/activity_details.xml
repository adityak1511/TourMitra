<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fancy="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#EADDDF"
    tools:context="com.irinnovative.onepagesigninsignup.DetailsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CITY "
            android:textStyle="bold"
            android:textSize="20dp"/>

        <Spinner
            android:id="@+id/spr_country_list"
            android:layout_width="fill_parent"
            android:layout_height="24dp"
            android:layout_centerHorizontal="true"
            tools:context=".MainActivity"
            android:prompt="@string/city"
            android:padding="0dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:layout_marginTop="80dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:textStyle="bold"
            android:text="No of Students "
            android:layout_marginRight="50dp"
            android:textSize="20dp"/>

        <ImageButton
            android:id="@+id/stplus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#EADDDF"
            android:src="@drawable/addbtn" />

        <ImageButton
            android:id="@+id/stminus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#EADDDF"
            android:src="@drawable/subbtn"/>

        <TextView
            android:layout_marginLeft="30dp"
            android:layout_alignParentRight="true"
            android:id="@+id/stcount"
            android:textStyle="bold"
            android:layout_marginTop="15dp"
            android:textSize="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:layout_marginTop="80dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:text="No of Adults "
            android:textStyle="bold"
            android:layout_marginRight="50dp"
            android:textSize="20dp"/>

        <ImageButton
            android:id="@+id/adplus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#EADDDF"
            android:src="@drawable/addbtn"/>

        <ImageButton
            android:id="@+id/adminus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#EADDDF"
            android:src="@drawable/subbtn"/>

        <TextView
            android:layout_marginLeft="30dp"
            android:layout_alignParentRight="true"
            android:id="@+id/adcount"
            android:textStyle="bold"
            android:layout_marginTop="15dp"
            android:textSize="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />

    </LinearLayout>

    <mehdi.sakout.fancybuttons.FancyButton
        android:id="@+id/submit"
        android:layout_marginTop="100dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:paddingBottom="10dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="10dp"
        fancy:fb_textSize="25sp"
        fancy:fb_borderColor="#FFFFFF"
        fancy:fb_borderWidth="1dp"
        fancy:fb_defaultColor="#6200EA"
        fancy:fb_focusColor="#651FFF"
        fancy:fb_iconPosition="left"
        fancy:fb_radius="30dp"
        fancy:fb_text="SUBMIT"
        fancy:fb_textColor="#FFFFFF" />

</LinearLayout>
